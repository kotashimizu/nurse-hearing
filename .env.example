# アプリケーション設定
NODE_ENV=development
PORT=3000

# データベース設定
DATABASE_URL=postgresql://postgres:postgres@db:5432/nurse_hearing
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=nurse_hearing

# Supabase設定
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# OpenAI API設定
OPENAI_API_KEY=your_openai_api_key_here

# Google Maps API設定
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# LINE Messaging API設定
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token_here
LINE_CHANNEL_SECRET=your_line_channel_secret_here

# Google Speech-to-Text API設定
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id_here
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/credentials.json

# Redis設定（開発環境）
REDIS_URL=redis://redis:6379

# セッション設定
SESSION_SECRET=your_session_secret_here

# JWT設定
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# メール送信設定（オプション）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password_here
EMAIL_FROM=noreply@nurse-hearing.com

# ログ設定
LOG_LEVEL=info

# アップロード設定
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# CORS設定
CORS_ORIGIN=http://localhost:3000

# レート制限設定
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Python API設定
PYTHON_API_URL=http://python-api:8000

# 開発環境用設定
NEXT_TELEMETRY_DISABLED=1